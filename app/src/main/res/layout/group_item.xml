<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/eventCard"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="275dp">

    <RelativeLayout
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/interestMask"
            android:background="@color/eventMask"
            android:layout_above="@id/eventInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/interestInfo"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="81dp">

            <LinearLayout
                android:layout_width="216dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/participant1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_participants_picture"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/participant2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_participants_picture"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/participant3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_participants_picture"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/participant4"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_participants_picture"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <TextView
                android:id="@+id/interestMembers"
                android:text="32 Participants"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/cooleafWhite" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_toLeftOf="@id/eventCalenderButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/interestImage"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:transitionName="hero_event"
            android:adjustViewBounds="true"
            android:layout_above="@id/interestInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/interestHashtag"
            android:text="#Yoga and Pilates"
            android:textColor="@color/cooleafWhite"
            android:layout_above="@id/interestInfo"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
</android.support.v7.widget.CardView>